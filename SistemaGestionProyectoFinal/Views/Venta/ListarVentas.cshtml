@model IEnumerable<SistemaGestionEntities.Venta>

<h2>Listar Ventas</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Comentarios</th>
            <th>Usuario ID</th>
            <th>Nombre del Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.Id</td>
                <td>@venta.Comentarios</td>
                <td>@venta.UsuarioId</td>
                <td>@venta.Usuario.Nombre</td> 
                <td>
                    <!-- Suponiendo que tienes acciones de Editar y Eliminar en tu controlador -->
                    <a asp-action="EditarVenta" asp-route-id="@venta.Id">Editar</a> |
                    <form asp-action="EliminarVenta" asp-route-id="@venta.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta venta?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CargarVenta">Crear Nueva Venta</a>

