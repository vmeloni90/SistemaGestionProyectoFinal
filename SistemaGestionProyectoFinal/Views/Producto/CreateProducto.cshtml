@model SistemaGestionEntities.Producto

@{
    ViewBag.Title = "Crear Producto";
}

<div class="container mt-5">
    <h2>@ViewBag.Title</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

    <form method="post" asp-action="CreateProducto">
        <!-- No necesitas el input hidden para el ID ya que es un nuevo producto -->

        <div class="form-group">
            <label for="Descripcion">Descripción:</label>
            <input type="text" class="form-control" asp-for="Descripcion" required>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Costo">Costo:</label>
            <input type="number" step="0.01" class="form-control" asp-for="Costo" required>
            <span asp-validation-for="Costo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="PrecioVenta">Precio de Venta:</label>
            <input type="number" step="0.01" class="form-control" asp-for="PrecioVenta" required>
            <span asp-validation-for="PrecioVenta" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Stock">Stock:</label>
            <input type="number" class="form-control" asp-for="Stock" required>
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Crear Producto</button>
        <a href="@Url.Action("ListarProductos", "Producto")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
