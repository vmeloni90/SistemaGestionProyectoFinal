@model SistemaGestionEntities.Usuario
@{
    ViewBag.Title = "Crear Usuario";
}

<h2>Crear Usuario</h2>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}
<form asp-action="CreateUsuario" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellido">Apellido</label>
        <input asp-for="Apellido" class="form-control" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NombreUsuario">Nombre de Usuario</label>
        <input asp-for="NombreUsuario" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mail">Correo Electrónico</label>
        <input asp-for="Mail" type="email" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear Usuario</button>
</form>
@if (Model != null && Model.Id > 0)  
{
    <h3 class="mt-4">Usuario Creado</h3>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>ID</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>@Model.Nombre</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>@Model.Apellido</td>
            </tr>
            <tr>
                <th>Nombre de usuario</th>
                <td>@Model.NombreUsuario</td>
            </tr>
            <tr>
                <th>Correo Electrónico</th>
                <td>@Model.Mail</td>
            </tr>
        </tbody>
    </table>
}